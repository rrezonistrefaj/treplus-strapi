{
  "kind": "singleType",
  "collectionName": "contact_settings",
  "info": {
    "singularName": "contact-setting",
    "pluralName": "contact-settings",
    "displayName": "Contact Settings",
    "description": "Configuration for the Contact section, including trusted companies and form field structure"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "contactTitleLine1": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "contactTitleLine2": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "contactIcon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "contactDescription": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "trustedSectionTitle": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "trustedSectionDescription": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "trustedCompanies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::trusted-company.trusted-company"
    },
    "formFields": {
      "type": "component",
      "repeatable": true,
      "component": "contact.form-field",
      "required": false
    },
    "privacyPolicyLinkUrl": {
      "type": "string",
      "required": false,
      "default": "#",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}

