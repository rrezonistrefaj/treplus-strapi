      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "contactLinks": {
      "type": "component",
      "repeatable": true,
      "component": "footer.navigation-link",
      "required": false
    },
    "copyrightText": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "footer.social-link",
      "required": false
