{
  "collectionName": "components_footer_social_links",
  "info": {
    "displayName": "Footer Social Link",
    "description": "Social media link in the footer (platform, icon, and href)"
  },
  "options": {},
  "attributes": {
    "platform": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "href": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}

